# Variables de entorno para Render

# Aplicación
APP_NAME="Gestión Barberías"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://tu-app.onrender.com

# Base de datos (usar DATABASE_URL en Render)
DB_CONNECTION=pgsql
DATABASE_URL=

# Cache y sesiones
CACHE_STORE=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Mail (configurar con tu proveedor de email)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@tu-app.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configuración para producción
LOG_CHANNEL=stderr
LOG_LEVEL=error

# HTTPS en producción
ASSET_URL=https://tu-app.onrender.com
